#=============================================
#       Separator symbols

# normal status left/right sections separators
#left_separator_main=''
#left_separator_sub='|'
#right_separator_main=''
#right_separator_sub='|'

# powerline status left/right sections separators
left_separator_main='î‚°'  # /!\ you don't need to install Powerline
left_separator_sub='î‚±'   #   you only need fonts patched with
right_separator_main='î‚²' #   Powerline symbols or the standalone
right_separator_sub='î‚³'  #   PowerlineSymbols.otf font

# general fg/bg
main_bg=colour0
main_fg=colour255

# panes
pane_bg=$main_bg
pane_fg=colour6
#pane_fmt="#I #W "
pane_fmt='#(sh $HOME/.terminal_setup/tmux-plugins/tmux_cmd.sh _circled_digit "#I")  #W'

current_pane_bg=colour6
current_pane_fg=$main_bg

pane_activity_fg=colour9
pane_activity_bg=$main_bg

last_pane_fg=colour5
last_pane_bg=$main_bg

pane_border_fg=colour250
pane_border_bg=default
active_pane_border_fg=colour3
active_pane_border_bg=default

#---------------------------------------------

#=============================================
#       Status line widgets

# prefix indicator
#prefix_char='â–'
prefix_char='ğŸ’¡' 
prefix_bg=$main_bg
prefix_fg=colour202
prefix="#[bg=prefix_bg,fg=prefix_fg,bold]#{?client_prefix,$prefix_char, }"

# TODO: root
#root_symbol='ğŸ©''
#â™•â™”

# time and date 
time_bg=$main_bg
time_fg=colour38
time="#[bg=$time_bg,fg=$time_fg]#{right_separator_sub} %H:%M #{right_separator_sub} %a-%h.%d.%Y"

# cpu utilization
cpu_bg=colour236
cpu="#[fg=$cpu_bg]#{right_separator_main}#[bg=$cpu_bg]#{cpu_fg_color} CPU: #{cpu_icon}#{cpu_percentage}"

# hostname
host_bg=colour17
host_fg=colour250
date="#[fg=$date_bg]#{right_separator_main}#[bg=$date_bg,fg=$date_fg] [%a] %h.%d.%Y"
host="#[fg=$host_bg]#{right_separator_main}#[bg=$host_bg,fg=$host_fg] #H"

# session
session_fg=$main_bg
session_bg=colour202
session_char='â–'
session="#[fg=$session_fg,bg=$session_bg]$session_char #S #[fg=$session_bg,bg=$main_bg]#{left_separator_main}"
#ğŸŒ¿ğŸ€ğŸŒ™ï£¿ğŸŒğŸ”˜
#---------------------------------------------

#=============================================
#       Configure Tmux

# max length of status bars
set -g status-left-length 1000
set -g status-right-length 1000

# status bar
setw -g status-bg $main_bg
setw -g status-fg $main_fg

# panes
setw -g window-status-style "fg=$pane_fg,bg=$pane_bg"
setw -g window-status-format " $pane_fmt" 
setw -g window-status-current-style "fg=$current_pane_fg,bg=$current_pane_bg"
setw -g window-status-current-format "#[fg=$current_pane_bg,bg=$pane_bg]#{right_separator_main}#[fg=default,bg=default] $pane_fmt #[fg=$current_pane_bg,bg=$pane_bg]#{left_separator_main}"
setw -g window-status-activity-style "fg=$pane_activity_fg,bg=$pane_activity_bg"
setw -g window-status-last-style "fg=$last_pane_fg,bg=$last_pane_bg"
setw -g pane-border-style "fg=$pane_border_fg,bg=$pane_border_bg"
setw -g pane-active-border-style "fg=$active_pane_border_fg,bg=$active_pane_border_bg"

# status bars
set -g status-left "$prefix $session "
set -g status-right "$time $cpu $host "
#---------------------------------------------
